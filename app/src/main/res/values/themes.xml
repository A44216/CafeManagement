<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CafeManagement" parent="Theme.Material3.DayNight.NoActionBar"></style>

    <style name="Theme.CafeManagement" parent="Base.Theme.CafeManagement" />

    <style name="Theme.CafeManagement.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CafeManagement.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CafeManagement.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.CafeManagement.Fullscreen" parent="Theme.CafeManagement">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.CafeManagement.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.CafeManagement.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>