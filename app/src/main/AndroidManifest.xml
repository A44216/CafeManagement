<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CafeManagement">
        <activity
            android:name=".activities.home.product.UpdateProductActivity"
            android:exported="false" />
        <activity
            android:name=".activities.home.product.AddProductActivity"
            android:exported="false" />
        <activity
            android:name=".activities.home.category.UpdateCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".activities.home.category.AddCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".activities.home.UserHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.home.AdminHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.login.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activities.login.ForgotPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_forgot_password"
            android:theme="@style/Theme.CafeManagement.NoActionBar" />
        <activity
            android:name=".activities.login.NextRegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".activities.login.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>